<config>
    <modules>
        <Anmanios_Greeklish>
            <version>1.0.0</version>
        </Anmanios_Greeklish>
    </modules>
    <global>
        <helpers>
            <anmgreeklish>
                <class>Anmanios_Greeklish_Helper</class>
            </anmgreeklish>
			<catalog>
				<rewrite>
					<product_url>Anmanios_Greeklish_Helper_Catalog_Product_Url</product_url>
				</rewrite>
			</catalog>
        </helpers>
    </global>
	<frontend>
        <translate>
            <modules>
                <Anmanios_Greeklish>
                    <files>
                        <default>Anmanios_Greeklish.csv</default>
                    </files>
                </Anmanios_Greeklish>
            </modules>
        </translate>
    </frontend>
	<adminhtml>
		<translate>
			<modules>
				<Anmanios_Greeklish>
					<files>
						<default>Anmanios_Greeklish.csv</default>
					</files>
				</Anmanios_Greeklish>
			</modules>
		</translate>
	</adminhtml>
	<default>
		<anmgreeklish>
			<general>
				<enabled>1</enabled>
			</general>
		</anmgreeklish>
	</default>	
</config>